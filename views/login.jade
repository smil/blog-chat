extends layout

block content
    form(method='post' class='form-body')
        ul
            li(class='item')
                p
                    label 用户名
                    span *
                p
                    input(type='text' name='name' placeholder='请输入用户名' require)
            li(class='item')
                p
                    label 密码
                    span *
                p
                    input(type='password' name='password' placeholder='请输入密码' require)
        div(class='footer')
            button(type='submit' value='登录' class='btn') 登录